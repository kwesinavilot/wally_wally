{
    "manifest_version": 3,
    "name": "Zhuzh",
    "version": "0.1.7",
    "description": "Zhuzh refreshes your browser with inspiring wallpapers of SpaceX rockets and provides a search bar for quick Google searches.",
    "action": {
        "default_icon": "logo-white.png"
    },
    "icons": {
        "16": "logo-white.png",
        "32": "logo-white.png",
        "48": "logo-white.png",
        "128": "logo-white.png"
    },
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "content_scripts": [
        {
            "all_frames": true,
            "run_at": "document_start",
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "./content.js"
            ]
        }
    ],
    "permissions": [
        "topSites",
        "favicon",
        "storage",
        "tabs"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "_favicon/*"
            ],
            "matches": [
                "<all_urls>"
            ],
            "extension_ids": [
                "*"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; default-src 'self'; img-src chrome://favicon;"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "zhuzh@naviwarernd.com",
            "strict_min_version": "42.0",
            "strict_max_version": "50.*"
        },
        "safari": {
            "id": "zhuzh@naviwarernd.com",
            "strict_min_version": "14",
            "strict_max_version": "20"
        }
    }
}